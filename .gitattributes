# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript

# JavaScript files
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.mjs linguist-language=JavaScript

# Style files
*.css linguist-language=CSS
*.scss linguist-language=SCSS

# Documentation
*.md text
*.mdx text
*.txt text

# Configuration files
*.json text
*.yaml text
*.yml text
*.config.js text
*.config.ts text

# Next.js specific
next.config.* linguist-language=JavaScript
next-env.d.ts linguist-language=TypeScript

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Lock files
package-lock.json binary
yarn.lock binary
pnpm-lock.yaml binary

# Enforce Unix line endings
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.md text eol=lf
